{
  "expo": {
    "name": "The Review Book",
    "slug": "the-review-book",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#325bd1"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "the.review.book",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png"
      }
    },
    "web": {
      "favicon": "./src/assets/icon.png"
    },
    "description": "Give reviews to your teachers, share your experience and help fellow students."
  }
}
